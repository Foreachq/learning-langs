{
  "description": "Learning foreign languages",
  "type": "project",
  "license": "proprietary",
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": "^8.1.5",
    "ext-ctype": "*",
    "ext-iconv": "*",
    "doctrine/doctrine-bundle": "^2.6",
    "doctrine/doctrine-migrations-bundle": "^3.2",
    "doctrine/orm": "^2.11",
    "sentry/sentry-symfony": "^4.2",
    "symfony/console": "5.4.*",
    "symfony/dotenv": "5.4.*",
    "symfony/flex": "^2.1",
    "symfony/form": "5.4.*",
    "symfony/framework-bundle": "5.4.*",
    "symfony/mailer": "5.4.*",
    "symfony/monolog-bundle": "^3.7",
    "symfony/password-hasher": "5.4.*",
    "symfony/property-access": "5.4.*",
    "symfony/proxy-manager-bridge": "5.4.*",
    "symfony/runtime": "5.4.*",
    "symfony/security-bundle": "5.4.*",
    "symfony/serializer": "5.4.*",
    "symfony/twig-bundle": "5.4.*",
    "symfony/uid": "5.4.*",
    "symfony/validator": "5.4.*",
    "symfony/webpack-encore-bundle": "^1.14",
    "symfony/yaml": "5.4.*",
    "symfonycasts/verify-email-bundle": "^1.10"
  },
  "require-dev": {
    "psalm/plugin-symfony": "^3.1",
    "qossmic/deptrac-shim": "^0.19.3",
    "slevomat/coding-standard": "dev-master#8c005a3ef09eaf8939745a3ebbdfcf6f03ff3362 as 7.1.0",
    "squizlabs/php_codesniffer": "^3.6",
    "symfony/maker-bundle": "^1.38",
    "symfony/stopwatch": "5.4.*",
    "symfony/web-profiler-bundle": "5.4.*",
    "theofidry/psysh-bundle": "^4.5",
    "vimeo/psalm": "^4.22"
  },
  "config": {
    "allow-plugins": {
      "composer/package-versions-deprecated": true,
      "symfony/flex": true,
      "symfony/runtime": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "optimize-autoloader": true,
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "replace": {
    "symfony/polyfill-ctype": "*",
    "symfony/polyfill-iconv": "*",
    "symfony/polyfill-php72": "*"
  },
  "scripts": {
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd"
    },
    "post-install-cmd": [
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "@auto-scripts"
    ],
    "lint": "phpcs --standard=phpcs.xml .",
    "static-analysis": "psalm --config=psalm.xml",
    "deptrac": "deptrac --config-file=deptrac.yaml"
  },
  "conflict": {
    "symfony/symfony": "*"
  },
  "extra": {
    "symfony": {
      "allow-contrib": false,
      "require": "5.4.*"
    }
  }
}
