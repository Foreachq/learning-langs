{% extends '@infrastructure/base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="py-4 container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Sign In</div>
                    <div class="card-body">
                        <form action="{{ path('security_login') }}" method="post">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="row mb-3">
                                <label for="username" class="col-md-4 col-form-label text-md-end">Email:</label>

                                <div class="col-md-6">
                                    <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}"/>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="password" class="col-md-4 col-form-label text-md-end">Password:</label>

                                <div class="col-md-6">
                                    <input type="password" id="password" class="form-control" name="_password"/>
                                </div>
                            </div>

                            <div class="row mb-0">
                                <div class="col-md-6 offset-md-4">
                                    <button type="submit" class="btn btn-primary">Login</button>
                                </div>
                            </div>
                            {# If you want to control the URL the user is redirected to on success
                            <input type="hidden" name="_target_path" value="/account"/> #}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
