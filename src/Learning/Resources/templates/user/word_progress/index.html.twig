{% extends '@learning/user/word_progress/words_table.html.twig' %}

{% block table_header %}
Words learning list
{% endblock %}

{% block upper_table_button %}
    <a href="{{ path('learning_word_progress_edit') }}" class="btn btn-primary ml-auto">Edit list</a>
{% endblock %}

{% block table %}
    <table class="table me-2">
        <thead>
        <tr>
            <th>English</th>
            <th>Russian</th>
        </tr>
        </thead>
        <tbody>
        {% for progress in progresses %}
            <tr>
                <td>
                    {{ progress.word.english }}
                </td>
                <td>
                    {{ progress.word.russian }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(progresses) }}
    </div>
{% endblock %}
