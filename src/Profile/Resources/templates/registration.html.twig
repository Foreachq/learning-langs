{% extends '@infrastructure/base.html.twig' %}

{% block body %}
<div class="py-4 container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Registration</div>
                <div class="card-body">
                    {{ form_start(form) }}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('registration') }}">

                    <div class="row mb-3">
                        <label for="profile_email" class="col-md-4 col-form-label text-md-end">Email:</label>

                        <div class="col-md-6">
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            {% if form_errors(form.email) %}
                                <div class="mt-1 text-danger no-bullet-list" role="alert">
                                    <small>{{ form_errors(form.email) }}</small>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="profile_firstName" class="col-md-4 col-form-label text-md-end">First name:</label>

                        <div class="col-md-6">
                            {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                            {% if form_errors(form.firstName) %}
                                <div class="mt-1 text-danger no-bullet-list" role="alert">
                                    <small>{{ form_errors(form.firstName) }}</small>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="profile_lastName" class="col-md-4 col-form-label text-md-end">Last name:</label>

                        <div class="col-md-6">
                            {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                            {% if form_errors(form.lastName) %}
                                <div class="mt-1 text-danger no-bullet-list" role="alert">
                                    <small>{{ form_errors(form.lastName) }}</small>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="profile_gender" class="col-md-4 col-form-label text-md-end">Gender:</label>

                        <div class="col-md-6">
                            {{ form_widget(form.gender, {'attr': {'class': 'form-select'}}) }}
                            {% if form_errors(form.gender) %}
                                <div class="mt-1 text-danger no-bullet-list" role="alert">
                                    <small>{{ form_errors(form.gender) }}</small>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="profile_password" class="col-md-4 col-form-label text-md-end">Password:</label>

                        <div class="col-md-6">
                            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                            {% if form_errors(form.password) %}
                                <div class="mt-1 text-danger no-bullet-list" role="alert">
                                    <small>{{ form_errors(form.password) }}</small>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <div class="row mb-0">
                        <div class="col-md-6 offset-md-4">
                            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
